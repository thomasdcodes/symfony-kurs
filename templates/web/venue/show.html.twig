{% extends 'web/base.html.twig' %}

{% block title %}{{ venue.name }}{% endblock %}

{% block body %}
    <h1>Veranstaltungsort Details</h1>
    <dl>
        <dt>Id</dt>
        <dd>{{ venue.id }}</dd>
        <dt>Name der Veranstaltungsortes</dt>
        <dd>{{ venue.name }}</dd>
        <dt>Anzahl der benötigten Wachhabenden</dt>
        <dd>{{ venue.numOfAdvancedGuards }}</dd>
        <dt>Anzahl der benötigten Posten</dt>
        <dd>{{ venue.numOfGuards }}</dd>
    </dl>
{% endblock %}

